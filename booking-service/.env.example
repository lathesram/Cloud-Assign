# Booking Service Environment Configuration - EXAMPLE
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3002

# AWS Configuration (REQUIRED - Replace with your values)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# DynamoDB Configuration
DYNAMODB_ENDPOINT=https://dynamodb.ap-southeast-1.amazonaws.com
DYNAMODB_REGION=ap-southeast-1
DYNAMODB_TABLE_PREFIX=skillbridge
DYNAMODB_TABLE_BOOKINGS=skillbridge-bookings-college
BOOKINGS_TABLE_NAME=skillbridge-bookings-college

# Service Dependencies
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3005
AUTH_SERVICE_HEALTH_URL=http://auth-service:3001/health
USER_SERVICE_HEALTH_URL=http://user-service:3005/health

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:8080
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=200

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Booking Business Logic
DEFAULT_BOOKING_DURATION=60
MAX_ADVANCE_BOOKING_DAYS=30
MIN_ADVANCE_BOOKING_HOURS=2