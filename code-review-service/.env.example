# Code Review Service Environment Configuration - EXAMPLE
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3003

# AWS Configuration (REQUIRED - Replace with your values)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# DynamoDB Configuration
DYNAMODB_ENDPOINT=https://dynamodb.ap-southeast-1.amazonaws.com
DYNAMODB_REGION=ap-southeast-1
DYNAMODB_TABLE_PREFIX=skillbridge
DYNAMODB_TABLE_REVIEWS=skillbridge-code-reviews-college
CODE_REVIEWS_TABLE_NAME=skillbridge-code-reviews

# S3 Configuration (REQUIRED - Replace with your bucket)
S3_BUCKET_NAME=your_s3_bucket_name_here
S3_REGION=ap-southeast-1
S3_ENDPOINT=https://s3.ap-southeast-1.amazonaws.com

# Service Dependencies
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3005
AUTH_SERVICE_HEALTH_URL=http://auth-service:3001/health
USER_SERVICE_HEALTH_URL=http://user-service:3005/health

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.js,.ts,.py,.java,.cpp,.c,.h,.css,.html,.json,.xml,.sql,.md,.txt,.zip,.tar,.gz
UPLOAD_PATH=/tmp/uploads
MAX_FILES_PER_UPLOAD=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3003,http://localhost:8080
CORS_CREDENTIALS=true

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=50

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Code Review Business Logic
MAX_REVIEW_SIZE=5242880
SUPPORTED_LANGUAGES=javascript,typescript,python,java,cpp,c,go,rust