# Messaging Service Environment Configuration - EXAMPLE
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3004

# AWS Configuration (REQUIRED - Replace with your values)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# DynamoDB Configuration
DYNAMODB_ENDPOINT=https://dynamodb.ap-southeast-1.amazonaws.com
DYNAMODB_REGION=ap-southeast-1
DYNAMODB_TABLE_PREFIX=skillbridge
DYNAMODB_TABLE_MESSAGES=skillbridge-messages-college
DYNAMODB_TABLE_CONVERSATIONS=skillbridge-conversations-college
MESSAGES_TABLE_NAME=skillbridge-messages-college
CONVERSATIONS_TABLE_NAME=skillbridge-conversations-college

# JWT Configuration (REQUIRED - Generate secure secret for WebSocket auth)
JWT_SECRET=generate_a_secure_jwt_secret_for_messaging_service_here

# Service Dependencies
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3005
AUTH_SERVICE_HEALTH_URL=http://auth-service:3001/health
USER_SERVICE_HEALTH_URL=http://user-service:3005/health

# WebSocket Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080
SOCKET_TRANSPORTS=websocket,polling
SOCKET_PATH=/socket.io
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3004,http://localhost:8080
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3005
CORS_CREDENTIALS=true

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=300

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Messaging Business Logic
MAX_MESSAGE_LENGTH=2000
MAX_FILE_ATTACHMENT_SIZE=5242880
MESSAGE_RETENTION_DAYS=365
MAX_PARTICIPANTS_PER_CONVERSATION=50