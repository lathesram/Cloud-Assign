# Auth Service Environment Configuration - EXAMPLE
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# AWS Configuration (REQUIRED - Replace with your values)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# DynamoDB Configuration
DYNAMODB_ENDPOINT=https://dynamodb.ap-southeast-1.amazonaws.com
DYNAMODB_REGION=ap-southeast-1
DYNAMODB_TABLE_PREFIX=skillbridge
DYNAMODB_TABLE_USERS=skillbridge-users-college
DYNAMODB_TABLE_AUTH=skillbridge-auth-college
USERS_TABLE_NAME=skillbridge-users-college
USER_EMAIL_GSI_NAME=email-index

# JWT Configuration (REQUIRED - Generate secure secrets)
JWT_SECRET=generate_a_secure_jwt_secret_at_least_256_bits_long_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_ENDPOINT=/health