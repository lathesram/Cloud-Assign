# User Service Environment Configuration - EXAMPLE
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3005

# AWS Configuration (REQUIRED - Replace with your values)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# DynamoDB Configuration
DYNAMODB_ENDPOINT=https://dynamodb.ap-southeast-1.amazonaws.com
DYNAMODB_REGION=ap-southeast-1
DYNAMODB_TABLE_PREFIX=skillbridge
DYNAMODB_TABLE_USERS=skillbridge-users-college
DYNAMODB_TABLE_PROFILES=skillbridge-profiles-college
USERS_TABLE_NAME=skillbridge-users-college
BOOKINGS_TABLE_NAME=skillbridge-bookings-college
MESSAGES_TABLE_NAME=skillbridge-messages-college
CODE_REVIEWS_TABLE_NAME=skillbridge-code-reviews-college

# Global Secondary Indexes
USER_EMAIL_GSI_NAME=email-index
USER_TYPE_GSI_NAME=type-index
USER_DOMAIN_GSI_NAME=domain-index

# Service Dependencies
AUTH_SERVICE_URL=http://auth-service:3001
AUTH_SERVICE_HEALTH_URL=http://auth-service:3001/health

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3005,http://localhost:8080
CORS_CREDENTIALS=true

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# User Profile Configuration
MAX_PROFILE_IMAGE_SIZE=2097152
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
DEFAULT_AVATAR_URL=https://via.placeholder.com/150
MAX_BIO_LENGTH=500
MAX_SKILLS_COUNT=20